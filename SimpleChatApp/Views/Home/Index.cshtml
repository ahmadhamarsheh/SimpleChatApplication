<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            padding-top: 80px;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-control, .form-control:focus {
            border-color: #007bff;
            box-shadow: none;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

            .btn-info:hover {
                background-color: #138496;
                border-color: #117a8b;
            }

        .alert-info {
            border-color: #d1ecf1;
            background-color: #d1ecf1;
            color: #0c5460;
        }

        .list-group-item {
            border: 1px solid #d1ecf1;
            border-radius: 0.25rem;
            padding: 0.75rem 1.25rem;
            margin-bottom: 0.5rem;
            position: relative;
        }

            .list-group-item::before {
                content: "• ";
                color: #007bff;
                font-size: 1.2em; 
                margin-right: 0.5em; 
            }

        .timestamp {
            display: block;
            font-size: 0.75em;
            color: #6c757d;
            margin-top: 0.25rem;
        }

        #list {
            max-height: 400px;
            overflow-y: auto;
            padding: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="txtUser">Enter your name:</label>
                    <input type="text" id="txtUser" class="form-control" required pattern="[A-Za-z0-9 ]+" title="Alphanumeric characters only" />
                </div>
                <div class="form-group">
                    <label for="txtMessage">Enter your message:</label>
                    <textarea rows="10" id="txtMessage" class="form-control" required></textarea>
                </div>
                <button type="submit" id="btnSend" class="btn btn-info">Send Message</button>
            </div>

            <div class="col-md-6">
                <h3>Message List</h3>
                <ul id="list" class="list-group alert alert-info">
                    <!-- Messages will be added here -->
                </ul>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/site.js"></script>
    <script>

        function sanitizeInput(input) {
            const element = document.createElement('div');
            element.innerText = input; 
            return element.innerHTML;
        }

        function escapeHtml(text) {
            return text.replace(/[&<>"']/g, function (match) {
                switch (match) {
                    case '&': return '&amp;';
                    case '<': return '&lt;';
                    case '>': return '&gt;';
                    case '"': return '&quot;';
                    case "'": return '&#039;';
                }
            });
        }

        document.getElementById('btnSend').addEventListener('click', function () {
            const userInput = sanitizeInput(document.getElementById('txtUser').value);
            const messageInput = sanitizeInput(document.getElementById('txtMessage').value);

            if (userInput && messageInput) {
                const now = new Date();
                const formattedDate = now.toLocaleString();
                const messageList = document.getElementById('list');

                const newMessage = document.createElement('li');
                newMessage.className = 'list-group-item';
                newMessage.innerHTML = `
                            <strong>${userInput}:</strong> ${messageInput}
                            <span class="timestamp">${formattedDate}</span>
                        `;

                messageList.appendChild(newMessage);

                // Scroll to the bottom
                messageList.scrollTop = messageList.scrollHeight;

                document.getElementById('txtMessage').value = '';
            }
        });
    </script>
</body>
</html>
